<%= form_for [@user, @event] do |f|%>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>      
    <div class="field">
    <%= f.label :time %><br />
    <%= f.datetime_select :time, :minute_step => 5 %>
  </div>
  <div class="field">
    <%= f.label :capacity %><br />
    <%= f.number_field :capacity %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>  

  <div class="field">
    <%= f.hidden_field :rt_id, value: "" %>
  </div> 

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>