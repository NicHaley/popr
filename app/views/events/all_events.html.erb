<h1>Events</h1>

<%= form_tag events_path, method: :get do %>
	<%= label_tag :search, 'Find events nearby' %>
	<%= text_field_tag :search %>
	<%= submit_tag 'Submit'%>
<% end %>


<button id="current-location">Find Nearby Events</button>

<section id="events">
	<%= render 'event' %>
</section>

<div id="map-container">	
	<div id="map-canvas"></div>
</div>



<% if current_user %>
	<p><%= link_to 'Add Event', new_user_event_path(user_id:current_user.id) %></p>
<% end %>