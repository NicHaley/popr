<% if @comment.errors.present? %>
  $("#comment-form-errors").html("<%= escape_javascript(render(:partial => '/events/comment_form_errors')) %>");
<% else %>
  $("#comment-form-errors").html("");
  $("#comment-list").html("<%= escape_javascript(render(:partial => '/events/comments')) %>");
  $("#new_comment")[0].reset();
<% end %>