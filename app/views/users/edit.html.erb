<div id="edit-container">
	<div class="row">
		<div class="large-4 medium-4 small-12 columns">

			<div id="edit-avatar-section">
				<div id="edit-avatar-panel">
					<%= image_tag @user.avatar_url(:profile), id: 'edit-profile-image'%>
				</div>
				<div id="edit-avatar-details">
					<br>
					<b><%=@user.first_name%> <%=@user.last_name%></b>
				</div>
			</div>
			<dl class="tabs vertical edit-panels" data-tab>
			  <dd class="active tab-effects"><a href="#edit-panel1" class="top-edit-panel">Profile</a></dd>
			  <dd class="tab-effects"><a href="#edit-panel2">Password</a></dd>
			  <dd class="tab-effects"><a href="#edit-panel3" class="bottom-edit-panel">Delete Account</a></dd>
			</dl>
		</div>
		<div class="large-8 medium-8 small-12 columns">
			<div class="tabs-content vertical">
			  <div class="content active" id="edit-panel1">
			    <%= render 'form' %>
			  </div>
			  <div class="content" id="edit-panel2">
			    <%= render 'password_form' %> 
			  </div>
			  <div class="content" id="edit-panel3">
				<%= render 'delete_form' %>
			  </div>
			</div>
		</div>
	</div>
</div>