<% unless @user.movie_interests.empty? %>
	<ul id="featured1 inline-list" data-orbit>
		<% count = 0 %>
	  	<li>
			<% @user.movie_interests.each do |movie| %>
				<% count += 1 %>
				<div class="car-img-container">
					<img class= "car-img" src="<%= Movie.find_movie(movie.rt_id).poster %>" style="float:left; padding-right:5px;" />
					<% if current_user.id == @user.id %>
						<%= link_to "Remove", user_movie_interest_path(@user,movie), data: { confirm: 'Are you sure?' }, method: :delete, class:"small-caps" %>
					<% end %>
				</div>
					<% if count % 3 == 0 %>
						</li>
						<li>
				<% end %> 
		 	<% end %>
		</li>
	</ul>
<% else %>
	<p id="no-data-filler-wish">No movies added to wishlist yet</p>
<% end %>	