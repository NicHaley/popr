<h4>Hosted Events</h4>

<ul>
	<% @user.hosted_events.each do |event| %>
  <% if event.not_passed %>
  <li>
    <%= link_to event.title, user_event_path(@user, event) %>
  </li>
  <% end %>
  <% end %>
</ul>

