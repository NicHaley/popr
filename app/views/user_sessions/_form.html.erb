<%= form_tag user_sessions_path, :method => :post do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="field">
    <%= label_tag :remember_me %>
    <%= check_box_tag :remember_me %>
  </div><br />
  <div class="actions">
    <%= submit_tag "Login", class: "button expand" %>
  </div>
<% end %>
