<h1>Explore Movies</h1>

<div class="movie-explore-field">
	<div id="search-block">
		<input type="text" id="search" placeholder="Search for movies and TV shows...">
		<div class="search-results"></div>
	</div>

	<div class="movie-info">
		<div id="movie-poster">
			<i>No Movie Selected</i>
		</div>
		<div class="movie-text">
			<div class="movie-title"></div><br />
			<div class="movie-score"></div><br />
			<div class="movie-director"></div>
			<div class="movie-cast"></div>
			<div class="movie-genre"></div>
			<div class="movie-mpaa_rating"></div>
			<div class="movie-runtime"></div>
		</div>
	</div>
</div>

<div class="wish-hide">
	<%= form_for([@user, @movie_interest], remote: true) do |f| %>

		<div class="field">
			<%= f.hidden_field :wished, value: "true" %>
			<%= f.hidden_field :rt_id, value: "" %>
		</div> 
		<div class="actions">
			<%= f.submit "Wish" %>
		</div>
	<% end %>
</div>

<script id="menu_info" type="x-tmpl-mustache">

	<div data-year="{{year}}" 
		data-cast="{{cast}}" 
		data-id="{{id}}" 
		data-title="{{title}}"
		data-poster="{{posterOri}}"
		data-icon = "{{icon}}"
		data-critics_rating = "{{critics_rating}}" 
		data-critics_score = "{{critics_score}}"
		data-genre = "{{genre}}"
		data-mpaa_rating = "{{mpaa_rating}}"
		data-runtime = "{{runtime}}"

		class="movie-click">

		<img class="img-thumb" 
			align="left" 
			height="58" 
			src="{{posterThumb}}" />

		<i> <img height="16" src="{{icon}}" /> <i id="movie-title"> {{critics_score}} - <strong> {{title}} ({{year}}) </strong> </i>
	</div>
</script>

<div class="review-hide">
	<h5>Write a Review</h5>

	<%= form_for([@user, @rating], url: user_ratings_path(current_user, @rating), :remote => true) do |f| %>		
	<div class="field">
		<%= f.label :user_score %>
		<%= f.radio_button :user_score, 1, id: "rating-1" %>
		<%= f.radio_button :user_score, 2, id: "rating-2" %>
		<%= f.radio_button :user_score, 3, id: "rating-3" %>
		<%= f.radio_button :user_score, 4, id: "rating-4" %>
		<%= f.radio_button :user_score, 5, id: "rating-5" %>
	</div>
	<div class="field">
		<%= f.label :review %><br />
		<%= f.text_area :review, :size => "45x5" %>
	</div>
	<div class="field">
		<%= f.hidden_field :rt_id, value: "" %>
	</div> 
	<div class="actions">
		<%= f.submit %>
	</div>
	<% end %>
</div>


